<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background_images"
    >

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center">


        <LinearLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/payroll_background"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/deduction_search"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="58dp"
                android:layout_marginRight="50dp"
                android:background="@color/colorBackground"
                android:completionThreshold="1"
                android:hint=" Enter Employee Id"
                android:textColor="@color/colornew"
                android:textColorHint="@color/colornew"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>


        <EditText
            android:id="@+id/deduction_name"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/background"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/colorBackground"
            android:ems="10"
            android:hint="Write Your Name"
            android:inputType="textPersonName"
            android:textColor="@color/colornew"
            android:textColorHint="@color/colornew"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/gross_SAlary"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/background"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/colorBackground"
            android:ems="10"
            android:hint="Write Your Gross Salary"
            android:inputType="number"
            android:textColor="@color/colornew"
            android:textColorHint="@color/colornew"
            android:textSize="24sp"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/advance"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/deduction_name"
            android:layout_alignStart="@id/deduction_name"
            android:layout_alignLeft="@id/deduction_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/colorBackground"
            android:ems="10"
            android:hint="Write Advance Deduction"
            android:textColor="@color/colornew"
            android:textColorHint="@color/colornew"
            android:textSize="24sp"
            android:inputType="number"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/provident"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/tax"
            android:layout_alignStart="@id/tax"
            android:layout_alignLeft="@id/tax"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/colorBackground"
            android:ems="10"
            android:hint="Write Provident Deduction"
            android:textColor="@color/colornew"
            android:textColorHint="@color/colornew"
            android:textSize="24sp"
            android:inputType="number"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/tax"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/deduction_name"
            android:layout_alignStart="@id/deduction_name"
            android:layout_alignLeft="@id/deduction_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/colorBackground"
            android:ems="10"
            android:hint="Write Tax Deduction"
            android:textColor="@color/colornew"
            android:textColorHint="@color/colornew"
            android:textSize="24sp"
            android:inputType="number"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/lifeinsurance"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/tax"
            android:layout_alignStart="@id/tax"
            android:layout_alignLeft="@id/tax"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/colorBackground"
            android:ems="10"
            android:hint="Write Insurance Deduction"
            android:textColor="@color/colornew"
            android:textColorHint="@color/colornew"
            android:textSize="24sp"
            android:inputType="number"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/other"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/tax"
            android:layout_alignStart="@id/tax"
            android:layout_alignLeft="@id/tax"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/colorBackground"
            android:ems="10"
            android:hint="Write Other Deduction"
            android:textColor="@color/colornew"
            android:textColorHint="@color/colornew"
            android:textSize="24sp"
            android:inputType="number"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/netpay"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/provident"
            android:layout_alignStart="@id/provident"
            android:layout_alignLeft="@id/provident"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/colorBackground"
            android:ems="10"
            android:hint="Net Salary"
            android:textColor="@color/colornew"
            android:textColorHint="@color/colornew"
            android:textSize="24sp"
            android:inputType="number"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_deduction_save"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/netpay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_rectangle_pink"
            android:text="Save"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>

</RelativeLayout>