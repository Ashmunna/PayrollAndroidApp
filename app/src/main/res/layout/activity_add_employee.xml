<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_images"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/payroll_emp_reg_background"
                android:id="@+id/background"
                >

            </LinearLayout>



            <TextView
                android:id="@+id/add_emp_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/background"
                android:layout_marginTop="40dp"
                android:background="@color/cardview_shadow_end_color"
                android:text="Employee Registration Form"
                android:textAllCaps="false"
                android:textColor="@color/colornew"
                android:textSize="30sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/name"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/background"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@color/colorBackground"
                android:drawableLeft="@drawable/register_name"
                android:ems="10"
                android:hint=" Write Your Name"
                android:inputType="textPersonName"
                android:textColor="@color/colornew"
                android:textColorHint="@color/colornew"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/name"
                android:layout_alignStart="@id/name"
                android:layout_alignLeft="@id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@color/colorBackground"
                android:drawableLeft="@drawable/register_email"
                android:ems="10"
                android:hint=" Write Your Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/colornew"
                android:textColorHint="@color/colornew"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/designation"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/email"
                android:layout_alignStart="@id/email"
                android:layout_alignLeft="@id/email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@color/colorBackground"
                android:ems="10"
                android:hint=" Write Your Designation"
                android:drawableLeft="@drawable/register_designation"
                android:inputType="textPersonName"
                android:textColor="@color/colornew"
                android:textColorHint="@color/colornew"
                android:textSize="24sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/basicsalary"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/designation"
                android:layout_alignStart="@id/designation"
                android:layout_alignLeft="@id/designation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@color/colorBackground"
                android:drawableLeft="@drawable/register_salary"
                android:ems="10"
                android:hint="Write Your Basic Salary"
                android:inputType="number"
                android:textColor="@color/colornew"
                android:textColorHint="@color/colornew"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_employee_save"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/basicsalary"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_rectangle_pink"
                android:text="Save"
                android:textColor="#ffffff"
                android:textSize="20sp" />



        </LinearLayout>


    </ScrollView>

</RelativeLayout>