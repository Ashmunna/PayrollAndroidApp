<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/payroll_background"
                android:id="@+id/background"
                >

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="245dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:ems="10"
                    android:hint="Enter Employee Id"
                    android:background="@color/colorPrimary"
                    android:inputType="textPersonName"
                    android:textStyle="bold" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Search"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/name"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/background"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:ems="10"
                android:hint="Write Your Name"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/name"
                android:layout_alignStart="@id/name"
                android:layout_alignLeft="@id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:ems="10"
                android:hint="Write Your Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/designation"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/email"
                android:layout_alignStart="@id/email"
                android:layout_alignLeft="@id/email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:ems="10"
                android:hint="Write Your Designation"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="24sp" />



            <EditText
                android:id="@+id/basicsalary"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/designation"
                android:layout_alignStart="@id/designation"
                android:layout_alignLeft="@id/designation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:ems="10"
                android:hint="Write Your Basic Salary"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:inputType="number" />

            <Button
                android:id="@+id/btn_employee_save"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/basicsalary"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_rectangle_pink"
                android:text="Save"
                android:textColor="#ffffff"
                android:textSize="20sp" />



        </LinearLayout>


    </ScrollView>

</RelativeLayout>